@model FlexCart.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="fas fa-box"></i> Add New Product</h3>
                </div>

                <div class="card-body p-4">
                    <form method="post" asp-action="Create" asp-controller="Product" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="ProdName" class="form-label">Product Name</label>
                            <input asp-for="ProdName" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Barcode" class="form-label">Barcode</label>
                            <input asp-for="Barcode" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">Upload Image</label>
                            <input asp-for="ImageFile" type="file" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProdTypeId" class="form-label">Product Type</label>
                            <input asp-for="ProdTypeId" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-success w-100">Save Product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>