@model IEnumerable<FlexCart.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<!-- Google Font: Poppins -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
<!-- FontAwesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container mt-5">
    <!-- Header with Back and Create Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold" style="font-family: 'Poppins', sans-serif;">
            <i class="fas fa-user-friends me-2 text-success"></i> Customer List
        </h3>
        <div>
            <a asp-controller="admin" asp-action="Dashboard" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm me-2">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
            <a asp-controller="Customer" asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
                <i class="fas fa-plus"></i> Create New Customer
            </a>
        </div>
    </div>

    <!-- Table Design -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <table class="table table-striped table-bordered text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Masked Password</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.Name</td>
                            <td>@customer.Address</td>
                            <td>@customer.Email</td>
                            <td>@customer.Mobile</td>
                            <td>*******</td>
                            <td class="text-center">
                                <a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CusId" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-controller="Customer" asp-action="Details" asp-route-id="@customer.CusId" class="btn btn-info btn-sm me-1">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CusId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
