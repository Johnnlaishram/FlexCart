@model FlexCart.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container mt-5">
    <!-- Top section with Create button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold"><i class="fas fa-user-edit"></i> Edit Customer</h3>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus"></i> Create New Customer
        </a>
    </div>

    <div class="d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">Edit Customer Details</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="CusId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Full Name</label>
                            <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter full name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-semibold">Address</label>
                            <input asp-for="Address" class="form-control shadow-sm" placeholder="Enter address" />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Email" type="email" class="form-control shadow-sm" placeholder="Enter email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Mobile" class="form-label fw-semibold">Mobile</label>
                            <input asp-for="Mobile" type="tel" class="form-control shadow-sm" placeholder="Enter mobile number" />
                            <span asp-validation-for="Mobile" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
