@model IEnumerable<FlexCart.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="container mt-5">
    <!-- Header with Create Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="fas fa-users"></i> Customer List</h2>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus"></i> Create New Customer
        </a>
    </div>

    <!-- Table Design -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <table class="table table-striped table-bordered text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Masked Password</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.Name</td>
                            <td>@customer.Address</td>
                            <td>@customer.Email</td>
                            <td>@customer.Mobile</td>
                            <td>*******</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@customer.CusId" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@customer.CusId" class="btn btn-info btn-sm me-1">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@customer.CusId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- FontAwesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
