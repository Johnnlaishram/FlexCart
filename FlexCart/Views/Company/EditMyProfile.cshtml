@model FlexCart.Models.Company
@{
    ViewData["Title"] = "Edit My Profile";
}
<h2>Edit My Profile</h2>

<form asp-action="EditMyProfile" method="post">
    <input type="hidden" asp-for="CompanyId" />

    <div class="mb-3">
        <label asp-for="CompanyName"></label>
        <input asp-for="CompanyName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Mobile"></label>
        <input asp-for="Mobile" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Addr"></label>
        <input asp-for="Addr" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Leave blank to keep existing" />
    </div>

    <div class="mb-3">
        <label asp-for="Web"></label>
        <input asp-for="Web" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
