@{
    ViewData["Title"] = "Company Dashboard";
}

<!-- ✅ Include Bootstrap 5 & FontAwesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    /* Slide-in Sidebar styles */
    .sidebar {
        height: 100%;
        width: 200px; /* Smaller width */
        position: fixed;
        top: 0;
        left: -200px; /* Initially off-screen */
        background-color: #007bff; /* Blue color */
        overflow-x: hidden;
        transition: 0.3s;
        padding-top: 60px;
        z-index: 1050;
    }

        .sidebar a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 18px;
            color: white;
            display: block;
            transition: 0.3s;
        }

            .sidebar a:hover {
                background-color: #0056b3; /* Darker blue on hover */
                color: #f1f1f1;
            }

        .sidebar .closebtn {
            position: absolute;
            top: 0;
            right: 10px;
            font-size: 30px;
            margin-left: 50px;
            color: white;
        }

    #sidebarToggle {
        font-size: 25px;
        color: #007bff;
        cursor: pointer;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Welcome to FlexCart (Company Panel)</h1>

        <!-- Button to open the sidebar -->
        <span id="sidebarToggle">
            <i class="fas fa-bars"></i> Menu
        </span>
    </div>

    <!-- Greeting -->
    @if (ViewBag.Email != null)
    {
        <div class="alert alert-success">
            <strong>Hello,</strong> @ViewBag.Email 👋 — you’re logged in as a Admin!
        </div>
    }

    <!-- Sidebar Menu -->
    <div id="mySidebar" class="sidebar">
        <!-- Close Button for the Sidebar -->
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

        <!-- Edit My Profile -->
        <a href="@Url.Action("EditMyProfile", "Company")">
            <i class="fas fa-user-edit me-1"></i> Edit Profile
        </a>


        <!-- Delete My Profile -->
        <a href="@Url.Action("DeleteMyProfile", "Company")" class="text-danger">
            <i class="fas fa-trash me-1"></i> Delete Profile
        </a>

        <!-- Logout -->
        <a href="@Url.Action("Logout", "company","login")">
            <i class="fas fa-sign-out-alt me-1"></i> Logout
        </a>
    </div>


    <!-- Add Product Button -->
    <div class="d-flex justify-content-start mb-4">
        <a asp-controller="Product" asp-action="Create" class="btn btn-outline-primary">
            <i class="fas fa-plus-circle"></i> Add Product
        </a>
    </div>

    <!-- Placeholder for future product cards -->
    <div class="row">
        <div class="col-md-4">
            <!-- Product cards go here -->
        </div>
    </div>
</div>

<!-- ✅ Bootstrap JS (Required for sidebar toggle) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Open the sidebar
    function openNav() {
        document.getElementById("mySidebar").style.left = "0";
    }

    // Close the sidebar
    function closeNav() {
        document.getElementById("mySidebar").style.left = "-200px"; /* Adjusted width */
    }

    // Toggle sidebar
    document.getElementById("sidebarToggle").onclick = openNav;
</script>
