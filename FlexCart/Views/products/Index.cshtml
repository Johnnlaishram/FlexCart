@model System.Data.DataTable

<h2>Product List</h2>
<a href="/Products/Create" class="btn btn-primary">Add Product</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["ProductId"]</td>
                <td>@row["Name"]</td>
                <td>@row["Description"]</td>
                <td>@row["Price"]</td>
                <td><img src="@row["ImageUrl"]" width="50"></td>
            </tr>
        }
    </tbody>
</table>
